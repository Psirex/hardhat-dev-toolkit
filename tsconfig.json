{
  "exclude": ["node_modules"],
  "include": ["packages/**/*.ts", "packages/common/format.ts"],
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "skipLibCheck": true
  }
}
